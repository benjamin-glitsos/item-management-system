<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="root-path">/home/bengyup/Desktop</Property>
        <Property name="standard-pattern">%p %d{ISO8601} %c{1} %t - %m%n</Property>
    </Properties>
    <Appenders>
        <Console name="console-appender" target="SYSTEM_OUT">
            <PatternLayout pattern="${standard-pattern}" />
        </Console>
        <File name="file-appender" fileName="${root-path}/errors.log" append="true">
            <PatternLayout pattern="${standard-pattern}" />
        </File>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="console-appender" />
            <AppenderRef ref="file-appender" />
        </Root>
    </Loggers>
</Configuration>
