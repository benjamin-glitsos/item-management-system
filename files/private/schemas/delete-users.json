{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Delete or Restore Users",
    "type": "object",
    "properties": {
        "method": {
            "type": "string",
            "enum": ["soft", "hard", "restore"]
        },
        "usernames": {
            "type": "array",
            "minItems": 1,
            "maxItems": 100,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "pattern": "^[-_a-zA-Z0-9]*$",
                "patternDescription": "username can only contain letters (a-z and A-Z), numbers (0-9), and the hyphen (-) and underscore (_) symbols",
                "minLength": 1,
                "maxLength": 255
            }
        }
    },
    "required": ["method", "usernames"]
}
