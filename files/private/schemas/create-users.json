{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Create Users",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "pattern": "^[-_a-zA-Z0-9]*$",
      "patternDescription": "username can only contain letters (a-z and A-Z), numbers (0-9), and the hyphen (-) and underscore (_) symbols",
      "minLength": 1,
      "maxLength": 20
    },
    "email_address": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "format": "email",
      "email": true,
      "emailDescription": "email_address must be properly formatted e.g. someone@example.com"
    },
    "first_name": {
      "type": "string",
      "pattern": "^[^<>%$&]*$",
      "patternDescription": "first_name cannot include certain characters (^, <, >, %, $, &)",
      "minLength": 1,
      "maxLength": 50
    },
    "last_name": {
      "type": "string",
      "pattern": "^[^<>%$&]*$",
      "patternDescription": "last_name cannot include certain characters (^, <, >, %, $, &)",
      "minLength": 1,
      "maxLength": 70
    },
    "other_names": {
      "type": ["string", "null"],
      "pattern": "^[^<>%$&]*$",
      "patternDescription": "other_names cannot include certain characters (^, <, >, %, $, &)",
      "maxLength": 120
    },
    "password": {
      "type": "string",
      "pattern": "^[^<>%$&]*$",
      "patternDescription": "password cannot include certain characters (^, <, >, %, $, &)",
      "minLength": 8,
      "maxLength": 40
    },
    "additional_notes": {
      "type": ["string", "null"],
      "minLength": 1,
      "maxLength": 1048576
    }
  },
  "required": [
    "username",
    "email_address",
    "first_name",
    "last_name",
    "password"
  ]
}
