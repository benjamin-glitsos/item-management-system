{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Create Items",
  "type": "object",
  "properties": {
    "sku": {
      "type": "string",
      "pattern": "^[-A-Z0-9]*$",
      "patternDescription": "sku can only contain uppercase letters (A-Z), numbers (0-9), and the hyphen symbol (-). Ensure that it is all uppercase",
      "minLength": 1,
      "maxLength": 255
    },
    "upc": {
      "type": "string",
      "pattern": "^[0-9]*$",
      "patternDescription": "upc must only contain numbers (0-9). Ensure that there are no spaces or any other characters",
      "minLength": 12,
      "maxLength": 12
    },
    "name": {
      "type": "string",
      "pattern": "^[^<>%$&]*$",
      "patternDescription": "name cannot include certain characters (^, <, >, %, $, &)",
      "minLength": 1,
      "maxLength": 255
    },
    "description": {
      "type": ["string", "null"],
      "maxLength": 1048576
    },
    "acquisition_date": {
      "type": "string",
      "format": "date",
      "maxLength": 10
    },
    "expiration_date": {
      "type": ["string", "null"],
      "format": "date",
      "maxLength": 10
    },
    "unit_cost": {
      "type": "number",
      "minimum": 0,
      "maximum": 1048576
    },
    "unit_price": {
      "type": ["number", "null"],
      "minimum": 0,
      "maximum": 1048576
    },
    "quantity_available": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1048576
    },
    "quantity_sold": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1048576
    },
    "additional_notes": {
      "type": ["string", "null"],
      "maxLength": 1048576
    }
  },
  "required":[
     "sku",
     "upc",
     "name",
     "acquisition_date",
     "unit_cost",
     "quantity_available",
     "quantity_sold"
  ]
}
